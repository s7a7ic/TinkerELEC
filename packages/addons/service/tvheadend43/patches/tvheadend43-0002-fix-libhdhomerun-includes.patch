diff --git a/configure b/configure
index 9f2b342cd..e05f44e97 100755
--- a/configure
+++ b/configure
@@ -479,7 +479,7 @@ if enabled hdhomerun_static; then
 else
 
   if enabled_or_auto hdhomerun_client; then
