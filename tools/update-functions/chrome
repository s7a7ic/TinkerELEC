function get_pkg_ver() {
  pkgver=$(curl -s http://dl.google.com/linux/chrome/deb/dists/stable/main/binary-amd64/Packages | \
    sed -n '/^Package: google-chrome-stable$/ {n;s/Version: //;s/-[1-9]$//;p;}')
}

function update_package() {
  sed -e "s|^PKG_VERSION_NUMBER=.*|PKG_VERSION_NUMBER=\"${pkgver}\"|" -i "${pkgmk}"
}
