function custom_post_commit() {
  echo "Starting revision update of dependant addons"
  # do not change the version, just increment the addon
  export commit_msg="audiodecoder.openmpt: update libopenmpt to ${pkgver}"
  export commit_body="\n\n- libopenmpt: ${pkgver}"
  ${progname} audiodecoder.openmpt $(get_pkg_version audiodecoder.openmpt)
  # do not change the version, just increment the addon
  export commit_msg="mpd: update libopenmpt to ${pkgver}"
  export commit_body="\n\n- libopenmpt: ${pkgver}"
  ${progname} mpd $(get_pkg_version mpd)
}
