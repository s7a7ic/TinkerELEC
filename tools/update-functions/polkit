function custom_post_commit() {
  echo "Starting revision update of dependant addons"
  # do not change the version, just increment the addon
  export commit_msg="pcscd: update polkit to ${pkgver}"
  export commit_body="\n\n- polkit: ${pkgver}"
  ${progname} pcscd $(get_pkg_version pcscd)
  export commit_msg="oscam: update polkit to ${pkgver}"
  export commit_body="\n\n- polkit: ${pkgver}"
  ${progname} oscam $(get_pkg_version oscam)
}
