function update_package() {
  # update docker-compose package to "pkgver" version
  echo "Starting update of docker-compose to $pkgver."
  sed -e "s|^PKG_VERSION=.*|PKG_VERSION=\"${pkgver}\"|" -i "${pkgmk}"

  sha1url="https://github.com/docker/compose/releases/download/v${pkgver}/docker-compose-linux-aarch64"
  sha2url="https://github.com/docker/compose/releases/download/v${pkgver}/docker-compose-linux-armv7"
  sha3url="https://github.com/docker/compose/releases/download/v${pkgver}/docker-compose-linux-x86_64"

  sha1=$(get_sha ${sha1url})
  sha2=$(get_sha ${sha2url})
  sha3=$(get_sha ${sha3url})

  update_multiple_sha $pkgmk $sha1 $sha2 $sha3
}
